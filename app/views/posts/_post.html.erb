<li>
  <span class="question"><%= post.question %></span> <br />
  <span class="img-rounded"><%= image_tag post.image_url(:thumb).to_s %></span> <br />
  <span class="timestamp"><i class="icon-time"></i>
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <% if current_user?(post.user) %>
    <i class="icon-remove"></i>
    <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" }, title: post.question, title: post.image %>
  <% end %>
<hr color="black" />
</li>
