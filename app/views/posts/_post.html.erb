<li>
  <span class="question"><%= post.question %></span>
  <span class="image"><%= image_tag post.image_url.to_s %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </span>
  <% if current_user?(post.user) %>
    <%= link_to "delete", post, method: :delete, data: { confirm: "You sure?" }, title: {post.question, post.image} %>
  <% end %>
</li>