   
<% if signed_in? %>
  	<div class="row">
    	<aside class="span4">
      		<section>
        		<%= render 'shared/user_info' %>
      		</section>
      		<section>
        		<%= render 'shared/post_form' %>
      		</section>
    	</aside>
  	</div>

  	<div class="span8">
      	<h3>Micropost Feed</h3>
      	<%= render 'shared/feed' %>
   	</div>
<% else %>
    <h1>Microgram</h1>
    <p>
      	This is the home page
    </p>
    <%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>

<% end %> 
