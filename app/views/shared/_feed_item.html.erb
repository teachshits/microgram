<li id="<%= feed_item.id %>" style="list-style: none;">
  <span class="user">
    <%= link_to gravatar_for(feed_item.user), feed_item.user %>
    <%= link_to feed_item.user.name, feed_item.user %>
  </span> <br />
  <span class="question"><%= feed_item.question %></span> <br />
  <span class="image"><%= image_tag feed_item.image_url(:thumb).to_s %></span> <br />
  <span class="timestamp"><i class="icon-time"></i>
    Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
  </span>
  <% if current_user?(feed_item.user) %>
    <i class="icon-remove"></i>
    <%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" }, title: feed_item.question, title: feed_item.image %>
  <% end %>

  <span>
    <%= render 'shared/comment_form' %>
  </span>
  <hr color="black" />
</li>